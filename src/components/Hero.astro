<style
  define:vars={{ backgroundImage: `url("${optimizedBackgroundImage.src}")` }}
>
  @keyframes down {
    from {
      transform: translateX(-50%) translateY(0);
    }
    to {
      transform: translateX(-50%) translateY(8px);
    }
  }

  body:has(.nav-day.active) .scroll-down-circle {
    opacity: 0;
    transition: opacity 0.4s linear;
  }

  .hero {
    --circles-position: 37% 56%;
    --circles-size: 180vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100vh;
    overflow: clip;
    position: relative;

    background-color: var(--color-red-900);
    background-image: url("/circlees.svg");
    background-size: var(--circles-size);
    background-position: var(--circles-position);
    background-repeat: repeat;

    .hero-content {
      z-index: 1;
    }

    .scroll-down-circle {
      position: absolute;
      bottom: var(--space-3xl);
      opacity: 0.8;
      left: 50%;
      transform: translateX(-50%);
      width: 48px;
      height: 48px;
      border: 2px solid var(--color-white);
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;

      animation: down 0.8s ease-out infinite alternate;
      &::before {
        content: "";
        display: block;
        position: relative;
        top: -4px;
        width: 18px;
        height: 18px;
        border-left: 3px solid var(--color-white);
        border-bottom: 3px solid var(--color-white);
        transform: rotate(-45deg);
      }
    }

    .logo {
      position: absolute;
      top: 36px;
      left: 50%;
      transform: translateX(-50%);

      width: 120px;
      height: auto;
    }

    .title {
      display: flex;
      width: 100%;
      padding: 0 var(--space-xs);
      position: relative;
      margin-top: 172px;

      .star-top {
        position: absolute;
        bottom: calc(100% + var(--space-m));
        left: var(--space-xl);
        width: 20%;
        height: auto;
