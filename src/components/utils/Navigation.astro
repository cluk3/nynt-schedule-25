<style>
  nav {
    position: fixed;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    opacity: 1;
    display: flex;
    justify-content: center;

    transition:
      opacity 0.2s var(--ease-in-out),
      transform 0.2s var(--ease-in-out);

    &:not(:has(.active)):not(:has(a:focus-visible)) {
      opacity: 0;
      pointer-events: none;
      transform: translateX(-50%) scale(0.8);
    }
  }

  ul {
    flex: 1;
    display: flex;
    position: relative;
    overflow: auto;
    scrollbar-width: none;
    max-width: calc(100vw - 16px);
    padding: 10px var(--space-3xs);
    background: var(--color-white);
    border-radius: 24px;
    box-shadow: 0px 0px 30px 20px rgba(30, 30, 30, 0.05);
  }

  #background-slider {
    position: absolute;
    top: 10px;
    left: 0;
    width: min(10vw, 48px);
    height: min(10vw, 48px);
    background: var(--color-red-900);
    border-radius: 50%;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    opacity: 0;
  }

  #background-slider.visible {
    opacity: 1;
  }

  li {
    list-style: none;
    position: relative;
    z-index: 1;
  }

  a {
    width: min(10vw, 48px);
    height: min(10vw, 48px);

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    border-radius: 50%;
    color: var(--color-red-900);
    position: relative;

    transition: color 0.4s cubic-bezier(0.4, 0, 0.2, 1);

    .day {
      font-family: var(--bricolage);
      font-weight: 800;
      font-size: 16px;
      line-height: 18px;
    }

    .month {
      font-family: var(--bricolage);
      font-weight: 400;
      font-size: 11px;
      line-height: 12px;
    }
  }

  a.active {
    color: var(--color-white);
  }
</style>

<script is:inline>
  const nav = document.querySelector("nav ul");
  const slider = document.getElementById("background-slider");
  const links = document.querySelectorAll(".nav-day");

  function updateSlider() {
    const activeLink = document.querySelector(".nav-day.active");
    if (activeLink && slider && nav) {
      const parentLi = activeLink.parentElement;
      if (parentLi) {
        const offsetX = parentLi.offsetLeft;

        slider.style.transform = `translateX(${offsetX}px)`;
        slider.classList.add("visible");
      }
    } else if (slider) {
      slider.classList.remove("visible");
    }
  }

  updateSlider();

  // Watch for active class changes
  const observer = new MutationObserver(updateSlider);
  links.forEach((link) => {
    observer.observe(link, {
      attributes: true,
      attributeFilter: ["class"],
    });
  });

  // // Update on scroll
  // nav?.addEventListener("scroll", updateSlider);

  // Update on window resize
  window.addEventListener("resize", updateSlider);
</script>
